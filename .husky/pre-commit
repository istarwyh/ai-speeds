#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run pre-commit hooks
echo "ğŸ” Running pre-commit checks..."

# Check for large files (excluding generated bundles)
echo "ğŸ“ Checking file sizes..."
find . -type f -not -path "./node_modules/*" -not -path "./.git/*" -not -path "./.wrangler/*" -not -path "./src/scripts/generated/*" -exec sh -c 'size=$(stat -f%z "$1" 2>/dev/null || stat -c%s "$1"); if [ $size -gt 500000 ]; then echo "âŒ File $1 is too large ($size bytes > 500KB)"; exit 1; fi' _ {} \;

# Run lint-staged for incremental checks
echo "ğŸ§¹ Running lint-staged..."
npx lint-staged

echo "âœ… Pre-commit checks passed!"
